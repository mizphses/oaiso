.container-fluid
  %h2 アカウント登録
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .form-group.row
      = f.label :name, class: "col-sm-1 col-form-label"
      .col-sm-11
        = f.text_field :name, autocomplete: "new-password", class: "form-control mono"
    .form-group.row
      = f.label :email, class: "col-sm-1 col-form-label"
      .col-sm-11
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mono"
    - if @minimum_password_length
      %span.font-weight-bold
        (#{@minimum_password_length} 文字以上のパスワードを設定します)
    .form-group.row
      = f.label :password, class: "col-sm-1 col-form-label"
      .col-sm-11
        = f.password_field :password, autocomplete: "new-password", class: "form-control mono"

    .form-group.row
      = f.label :password_confirmation, class: "col-sm-1 col-form-label"
      .col-sm-11
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mono"
    .actions
      = f.submit "Sign up", class: "btn btn-primary"
  = render "devise/shared/links"
